{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts" // Entry point of your Angular app
  ],
  "include": [
    "src/app/**/*.ts", "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts", 
    "src/**/*.test.ts"
  ]
}
